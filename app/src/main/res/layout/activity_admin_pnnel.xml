<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPnnelActivity"
    android:background="@android:color/white"
    >

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Logout"
        android:background="@drawable/input_design"

        android:textColor="@android:color/darker_gray"
        />

    <ImageButton
        android:id="@+id/add_post_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_post"
        android:layout_below="@+id/admin_logout_btn"

        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/buttons"
        android:onClick="addPostActicity"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/temp_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Post"
        android:layout_below="@+id/admin_logout_btn"
        android:gravity="center_horizontal"
        android:layout_marginStart="95dp"
        android:layout_marginTop="33dp"
        android:textStyle="bold"
        android:textSize="25sp"

        android:textColor="@android:color/darker_gray"
        />

    <ImageButton
        android:id="@+id/add_daily_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_quote"
        android:layout_below="@+id/add_post_btn"

        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/buttons"
        android:onClick="addQuoteActicity"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/temp_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Quote"
        android:layout_below="@+id/temp_text1"
        android:gravity="center_horizontal"
        android:layout_marginStart="95dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:textSize="25sp"

        android:textColor="@android:color/darker_gray"
        />

    <ImageButton
        android:id="@+id/remove_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_below="@+id/add_daily_quote"

        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/buttons"
        android:onClick="removePostActicity"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/temp_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Post"
        android:layout_below="@+id/temp_text2"
        android:gravity="center_horizontal"
        android:layout_marginStart="95dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="25sp"

        android:textColor="@android:color/darker_gray"
        />

    <ImageButton
        android:id="@+id/stocks_in_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_stock"
        android:layout_below="@+id/remove_post"

        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/buttons"
        android:onClick="stockFocusUpdateActicity"
        android:padding="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stocks in Focus"
        android:layout_below="@+id/temp_text_3"
        android:gravity="center_horizontal"
        android:layout_marginStart="95dp"
        android:layout_marginTop="55dp"
        android:textStyle="bold"
        android:textSize="25sp"

        android:textColor="@android:color/darker_gray"
        />

</RelativeLayout>