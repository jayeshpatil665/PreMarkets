<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminStockFocusChangeActivity"
    android:background="@android:color/white"
    >

    <EditText
        android:id="@+id/et_adminFocus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Stocks in Focus now"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/et_adminFocus2"
        android:layout_below="@+id/et_adminFocus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Next weak stock prediction"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/et_adminFocus3"
        android:layout_below="@+id/et_adminFocus2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Description / Info"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btn_update_Focus"
        android:layout_below="@+id/et_adminFocus3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"

        android:layout_centerHorizontal="true"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        />
</RelativeLayout>